# Production environment variables for Backend
NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection String (replace with your actual connection string)
MONGODB_URI=mongodb+srv://scamphone_admin:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/scamphone_db?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Frontend URL (will be updated after Vercel deployment)
CLIENT_URL=https://scamphone.vercel.app

# Cloudinary Configuration (optional - for image upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# VNPay Configuration (optional)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://scamphone.vercel.app/payment-result
